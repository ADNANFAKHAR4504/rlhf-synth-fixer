# LocalStack Configuration for EC2/VPC Infrastructure
# This file enables the required AWS services for LocalStack Community

# Enable required services
SERVICES=ec2,vpc,s3,iam,cloudwatch,ecr,cloudformation,sts

# Enable EC2 features
EC2_EBS_MAX_VOLUME_SIZE=500
EC2_DOWNLOAD_DEFAULT_IMAGES=0

# Disable strict validation for faster testing
DISABLE_CORS_CHECKS=1
DISABLE_CUSTOM_CORS_S3=1
SKIP_INFRA_DOWNLOADS=1

# S3 Configuration
S3_SKIP_SIGNATURE_VALIDATION=1
S3_SKIP_KMS_KEY_VALIDATION=1

# IAM Configuration
ENFORCE_IAM=0

# CloudWatch
CLOUDWATCH_DISABLE_ERROR_LOGGING=1
