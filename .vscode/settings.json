{
  "files.watcherExclude": {
    "**/archive/**": true
  },
  "jest.runMode": "on-demand",
  "jest.jestCommandLine": "npm test --",
  "jest.rootPath": ".",

  // Environment variables for Jest integration tests
  "jest.nodeEnv": {
    "ENVIRONMENT_SUFFIX_": ""
  },

  // TypeScript settings
  "typescript.preferences.quoteStyle": "single",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.rulers": [120]
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "pylint.args": ["--indent-string='  '"],
  "autopep8.args": ["--indent-size=2"],
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.insertSpaces": true,
    "editor.rulers": [120],
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll.pylance": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.rulers": [120],
    "editor.wordWrap": "off",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    }
  },

  // Editor settings for consistency
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  // Test file patterns
  "files.exclude": {
    "**/node_modules": true,
    // "**/cdk.out": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.d.ts": true
  },

  // AWS CDK specific settings
  "json.schemas": [
    {
      "fileMatch": ["cdk.json"],
      "url": "https://raw.githubusercontent.com/aws/aws-cdk/main/packages/@aws-cdk/cloud-assembly-schema/schema/cloud-assembly.schema.json"
    }
  ],

  // Coverage settings
  "jest.coverageFormatter": "DefaultFormatter",
  "jest.coverageColors": {
    "covered": "rgba(9, 156, 65, 0.4)",
    "uncovered": "rgba(121, 31, 10, 0.4)",
    "partially-covered": "rgba(235, 198, 52, 0.4)"
  },

  // Python testing settings
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["-s", "-l", "--no-cov", "--testdox"],
  "python.testing.unittestEnabled": false,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python-envs.defaultEnvManager": "ms-python.python:conda",
  "python-envs.defaultPackageManager": "ms-python.python:conda",
  "python-envs.pythonProjects": []
}
