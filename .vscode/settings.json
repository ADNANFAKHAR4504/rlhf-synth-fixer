{
  "jest.runMode": "on-demand",
  
  // Environment variables for Jest integration tests
  "jest.nodeEnv": {
    "API_GATEWAY_ENDPOINT": "https://xlf44z4dlc.execute-api.us-east-2.amazonaws.com/prod",
    "READ_ONLY_API_KEY": "readOnlyApiKeyValuexxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
    "ADMIN_API_KEY": "adminApiKeyValuexxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  },
  
  // TypeScript settings
  "typescript.preferences.quoteStyle": "single",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  
  // Editor settings for consistency
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  // Test file patterns
  "files.exclude": {
    "**/node_modules": true,
    "**/cdk.out": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.d.ts": true
  },
  
  // AWS CDK specific settings
  "json.schemas": [
    {
      "fileMatch": ["cdk.json"],
      "url": "https://raw.githubusercontent.com/aws/aws-cdk/main/packages/@aws-cdk/cloud-assembly-schema/schema/cloud-assembly.schema.json"
    }
  ],
  
  // Coverage settings
  "jest.coverageFormatter": "DefaultFormatter",
  "jest.coverageColors": {
    "covered": "rgba(9, 156, 65, 0.4)",
    "uncovered": "rgba(121, 31, 10, 0.4)",
    "partially-covered": "rgba(235, 198, 52, 0.4)"
  }
}
