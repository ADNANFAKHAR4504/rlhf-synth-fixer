#!/bin/bash
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
# Git Pre-Push Hook for LocalStack Tasks
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
# Purpose: Automatically run production-ready checks before pushing to GitHub
# This prevents CI/CD failures by catching issues locally
#
# Installation:
#   cp .claude/hooks/pre-push .git/hooks/pre-push
#   chmod +x .git/hooks/pre-push
#
# Or use symlink (recommended - stays in sync):
#   ln -sf ../../.claude/hooks/pre-push .git/hooks/pre-push
#
# To bypass (emergency only):
#   git push --no-verify
# â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

# Get the root of the git repository
GIT_ROOT=$(git rev-parse --show-toplevel 2>/dev/null)
if [[ -z "$GIT_ROOT" ]]; then
  echo "âŒ Not in a git repository"
  exit 1
fi

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m'
BOLD='\033[1m'

echo ""
echo -e "${CYAN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${CYAN}  ğŸ” PRE-PUSH VALIDATION${NC}"
echo -e "${CYAN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo ""

# Check if we're in a worktree (LocalStack task branch)
CURRENT_BRANCH=$(git branch --show-current 2>/dev/null)

# Detect if this is a LocalStack task based on metadata.json
if [[ -f "$GIT_ROOT/metadata.json" ]]; then
  PROVIDER=$(jq -r '.provider // ""' "$GIT_ROOT/metadata.json" 2>/dev/null)
  
  if [[ "$PROVIDER" == "localstack" ]]; then
    echo -e "${YELLOW}ğŸ“‹ LocalStack task detected${NC}"
    echo -e "${YELLOW}   Branch: $CURRENT_BRANCH${NC}"
    echo ""
    
    # Run quick check first
    QUICK_CHECK_SCRIPT="$GIT_ROOT/.claude/scripts/quick-check.sh"
    
    if [[ -x "$QUICK_CHECK_SCRIPT" ]]; then
      echo -e "${CYAN}Running quick validation...${NC}"
      echo ""
      
      if ! bash "$QUICK_CHECK_SCRIPT" "$GIT_ROOT"; then
        echo ""
        echo -e "${RED}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
        echo -e "${RED}${BOLD}  âŒ PRE-PUSH CHECK FAILED${NC}"
        echo -e "${RED}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
        echo ""
        echo -e "  Fix the issues above before pushing."
        echo ""
        echo -e "  ${CYAN}To auto-fix:${NC}"
        echo -e "    bash .claude/scripts/production-ready-check.sh --fix"
        echo ""
        echo -e "  ${CYAN}For full validation:${NC}"
        echo -e "    bash .claude/scripts/production-ready-check.sh"
        echo ""
        echo -e "  ${YELLOW}To bypass (NOT recommended):${NC}"
        echo -e "    git push --no-verify"
        echo ""
        exit 1
      fi
    else
      echo -e "${YELLOW}âš ï¸  Quick check script not found - skipping validation${NC}"
    fi
    
    echo ""
    echo -e "${GREEN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    echo -e "${GREEN}${BOLD}  âœ… PRE-PUSH CHECK PASSED${NC}"
    echo -e "${GREEN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    echo ""
    echo -e "  Pushing to GitHub CI/CD..."
    echo ""
  fi
fi

exit 0

