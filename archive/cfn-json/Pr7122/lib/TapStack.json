        "RetentionInDays": 7
      }
    },
    "EKSCluster": {
      "Type": "AWS::EKS::Cluster",
      "Properties": {
        "Name": {
          "Fn::Sub": "eks-cluster-${EnvironmentSuffix}"
        },
        "Version": {
          "Ref": "EKSVersion"
        },
        "RoleArn": {
          "Fn::GetAtt": [
            "EKSClusterRole",
            "Arn"
          ]
        },
        "ResourcesVpcConfig": {
          "SecurityGroupIds": [
            {
              "Ref": "ClusterSecurityGroup"
            }
          ],
          "SubnetIds": [
            {
              "Ref": "PrivateSubnet1"
            },
            {
              "Ref": "PrivateSubnet2"
            },
            {
              "Ref": "PrivateSubnet3"
            }
          ],
          "EndpointPrivateAccess": true,
          "EndpointPublicAccess": false
        },
        "EncryptionConfig": [
          {
            "Resources": [
              "secrets"
            ],
            "Provider": {
              "KeyArn": {
                "Fn::GetAtt": [
                  "KMSKey",
                  "Arn"
                ]
              }
            }
          }
        ],
        "Logging": {
          "ClusterLogging": {
            "EnabledTypes": [
              {
                "Type": "api"
              },
              {
                "Type": "audit"
              },
              {
                "Type": "authenticator"
              },
              {
                "Type": "controllerManager"
              },
              {
                "Type": "scheduler"
              }
            ]
          }
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "eks-cluster-${EnvironmentSuffix}"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Fn::Sub": "${EnvironmentSuffix}"
            }
