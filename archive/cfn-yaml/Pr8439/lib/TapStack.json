{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Complete serverless file processing application with event-driven architecture and public API",
    "Parameters": {
        "EnvironmentSuffix": {
            "Type": "String",
            "Description": "Environment suffix to distinguish deployments (e.g., dev, stg, prod)",
            "AllowedPattern": "^[a-zA-Z0-9]+$",
            "ConstraintDescription": "Must contain only alphanumeric characters",
            "Default": "localstack"
        },
        "RootDomainName": {
            "Type": "String",
            "Description": "Root domain name for the application (e.g., example.com)",
            "Default": ""
        }
    },
    "Conditions": {
        "HasDomain": {
            "Fn::Not": [
                {
                    "Fn::Equals": [
                        {
                            "Ref": "RootDomainName"
                        },
                        ""
                    ]
                }
            ]
        }
    },
    "Resources": {
        "HostedZone": {
            "Type": "AWS::Route53::HostedZone",
            "Condition": "HasDomain",
            "Properties": {
                "Name": {
                    "Ref": "RootDomainName"
                },
                "HostedZoneConfig": {
                    "Comment": {
                        "Fn::Sub": "Hosted zone for ${RootDomainName} - ${EnvironmentSuffix} environment"
                    }
                },
                "HostedZoneTags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-HostedZone"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentSuffix"
                        }
                    }
                ]
            }
        },
        "Certificate": {
            "Type": "AWS::CertificateManager::Certificate",
            "Condition": "HasDomain",
            "Properties": {
                "DomainName": {
                    "Fn::Sub": "api-${EnvironmentSuffix}.${RootDomainName}"
                },
                "ValidationMethod": "DNS",
                "DomainValidationOptions": [
                    {
                        "DomainName": {
                            "Fn::Sub": "api-${EnvironmentSuffix}.${RootDomainName}"
                        },
                        "HostedZoneId": {
                            "Ref": "HostedZone"
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-Certificate"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentSuffix"
                        }
                    }
                ]
            }
        },
        "FileProcessingBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": {
                    "Fn::Sub": "serverless-files-${EnvironmentSuffix}-${AWS::AccountId}"
                },
                "VersioningConfiguration": {
                    "Status": "Enabled"
                },
                "NotificationConfiguration": {
                    "EventBridgeConfiguration": {
                        "EventBridgeEnabled": true
                    }
                },
                "PublicAccessBlockConfiguration": {
                    "BlockPublicAcls": true,
                    "BlockPublicPolicy": true,
                    "IgnorePublicAcls": true,
                    "RestrictPublicBuckets": true
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-Bucket"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentSuffix"
                        }
                    }
                ]
            }
        },
        "LambdaExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {
                    "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-LambdaRole"
                },
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "lambda.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
                ],
                "Policies": [
                    {
                        "PolicyName": "S3ReadAccess",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "s3:GetObject"
                                    ],
                                    "Resource": {
                                        "Fn::Sub": "${FileProcessingBucket.Arn}/*"
                                    }
                                }
                            ]
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-LambdaRole"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentSuffix"
                        }
                    }
                ]
            }
        },
        "FileProcessorFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "FunctionName": {
                    "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-FileProcessor"
                },
                "Runtime": "python3.13",
                "Handler": "index.lambda_handler",
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaExecutionRole",
                        "Arn"
                    ]
                },
                "ReservedConcurrentExecutions": 10,
                "Environment": {
                    "Variables": {
                        "BUCKET_NAME": {
                            "Ref": "FileProcessingBucket"
                        },
                        "ENVIRONMENT": {
                            "Ref": "EnvironmentSuffix"
                        }
                    }
                },
                "Code": {
                    "ZipFile": "import json\nimport boto3\nimport os\nfrom urllib.parse import unquote_plus\n\ndef lambda_handler(event, context):\n    print(f\"Received event: {json.dumps(event)}\")\n    \n    # Handle API Gateway requests\n    if 'httpMethod' in event:\n        return handle_api_request(event, context)\n    \n    # Handle S3 events\n    elif 'Records' in event:\n        return handle_s3_event(event, context)\n    \n    else:\n        return {\n            'statusCode': 400,\n            'headers': {\n                'Access-Control-Allow-Origin': '*',\n                'Access-Control-Allow-Headers': 'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token',\n                'Access-Control-Allow-Methods': 'GET,POST,OPTIONS'\n            },\n            'body': json.dumps({'error': 'Unsupported event type'})\n        }\n\ndef handle_api_request(event, context):\n    try:\n        method = event['httpMethod']\n        path = event.get('path', '/')\n        \n        # Handle OPTIONS for CORS\n        if method == 'OPTIONS':\n            return {\n                'statusCode': 200,\n                'headers': {\n                    'Access-Control-Allow-Origin': '*',\n                    'Access-Control-Allow-Headers': 'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token',\n                    'Access-Control-Allow-Methods': 'GET,POST,OPTIONS'\n                },\n                'body': ''\n            }\n        \n        response_body = {\n            'message': f'File processor API - {method} {path}',\n            'environment': os.environ.get('ENVIRONMENT', 'unknown'),\n            'bucket': os.environ.get('BUCKET_NAME', 'unknown'),\n            'timestamp': context.aws_request_id\n        }\n        \n        return {\n            'statusCode': 200,\n            'headers': {\n                'Content-Type': 'application/json',\n                'Access-Control-Allow-Origin': '*',\n                'Access-Control-Allow-Headers': 'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token',\n                'Access-Control-Allow-Methods': 'GET,POST,OPTIONS'\n            },\n            'body': json.dumps(response_body)\n        }\n    except Exception as e:\n        print(f\"API Error: {str(e)}\")\n        return {\n            'statusCode': 500,\n            'headers': {\n                'Content-Type': 'application/json',\n                'Access-Control-Allow-Origin': '*'\n            },\n            'body': json.dumps({'error': 'Internal server error'})\n        }\n\ndef handle_s3_event(event, context):\n    try:\n        s3_client = boto3.client('s3')\n        processed_files = []\n        \n        for record in event['Records']:\n            bucket = record['s3']['bucket']['name']\n            key = unquote_plus(record['s3']['object']['key'])\n            \n            print(f\"Processing file: {key} from bucket: {bucket}\")\n            \n            # Get object metadata\n            response = s3_client.head_object(Bucket=bucket, Key=key)\n            file_size = response['ContentLength']\n            \n            processed_files.append({\n                'bucket': bucket,\n                'key': key,\n                'size': file_size,\n                'event': record['eventName']\n            })\n        \n        print(f\"Successfully processed {len(processed_files)} files\")\n        return {\n            'statusCode': 200,\n            'processedFiles': processed_files\n        }\n    except Exception as e:\n        print(f\"S3 Processing Error: {str(e)}\")\n        raise e\n"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-Function"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentSuffix"
                        }
                    }
                ]
            }
        },
        "FileProcessorApi": {
            "Type": "AWS::ApiGateway::RestApi",
            "Properties": {
                "Name": {
                    "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-API"
                },
                "Description": "File processor REST API",
                "EndpointConfiguration": {
                    "Types": [
                        "REGIONAL"
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-API"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentSuffix"
                        }
                    }
                ]
            }
        },
        "ApiResource": {
            "Type": "AWS::ApiGateway::Resource",
            "Properties": {
                "RestApiId": {
                    "Ref": "FileProcessorApi"
                },
                "ParentId": {
                    "Fn::GetAtt": [
                        "FileProcessorApi",
                        "RootResourceId"
                    ]
                },
                "PathPart": "process"
            }
        },
        "ApiMethodGet": {
            "Type": "AWS::ApiGateway::Method",
            "Properties": {
                "RestApiId": {
                    "Ref": "FileProcessorApi"
                },
                "ResourceId": {
                    "Ref": "ApiResource"
                },
                "HttpMethod": "GET",
                "AuthorizationType": "NONE",
                "Integration": {
                    "Type": "AWS_PROXY",
                    "IntegrationHttpMethod": "POST",
                    "Uri": {
                        "Fn::Sub": "arn:aws:apigateway:${AWS::Region}:lambda:path/2015-03-31/functions/${FileProcessorFunction.Arn}/invocations"
                    }
                },
                "MethodResponses": [
                    {
                        "StatusCode": 200
                    }
                ]
            }
        },
        "ApiMethodPost": {
            "Type": "AWS::ApiGateway::Method",
            "Properties": {
                "RestApiId": {
                    "Ref": "FileProcessorApi"
                },
                "ResourceId": {
                    "Ref": "ApiResource"
                },
                "HttpMethod": "POST",
                "AuthorizationType": "NONE",
                "Integration": {
                    "Type": "AWS_PROXY",
                    "IntegrationHttpMethod": "POST",
                    "Uri": {
                        "Fn::Sub": "arn:aws:apigateway:${AWS::Region}:lambda:path/2015-03-31/functions/${FileProcessorFunction.Arn}/invocations"
                    }
                },
                "MethodResponses": [
                    {
                        "StatusCode": 200
                    }
                ]
            }
        },
        "ApiMethodOptions": {
            "Type": "AWS::ApiGateway::Method",
            "Properties": {
                "RestApiId": {
                    "Ref": "FileProcessorApi"
                },
                "ResourceId": {
                    "Ref": "ApiResource"
                },
                "HttpMethod": "OPTIONS",
                "AuthorizationType": "NONE",
                "Integration": {
                    "Type": "MOCK",
                    "RequestTemplates": {
                        "application/json": "{\"statusCode\": 200}"
                    },
                    "IntegrationResponses": [
                        {
                            "StatusCode": 200,
                            "ResponseParameters": {
                                "method.response.header.Access-Control-Allow-Origin": "'*'",
                                "method.response.header.Access-Control-Allow-Headers": "'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token'",
                                "method.response.header.Access-Control-Allow-Methods": "'GET,POST,OPTIONS'"
                            },
                            "ResponseTemplates": {
                                "application/json": ""
                            }
                        }
                    ]
                },
                "MethodResponses": [
                    {
                        "StatusCode": 200,
                        "ResponseParameters": {
                            "method.response.header.Access-Control-Allow-Origin": true,
                            "method.response.header.Access-Control-Allow-Headers": true,
                            "method.response.header.Access-Control-Allow-Methods": true
                        }
                    }
                ]
            }
        },
        "ApiDeployment": {
            "Type": "AWS::ApiGateway::Deployment",
            "DependsOn": [
                "ApiMethodGet",
                "ApiMethodPost",
                "ApiMethodOptions"
            ],
            "Properties": {
                "RestApiId": {
                    "Ref": "FileProcessorApi"
                },
                "StageName": {
                    "Ref": "EnvironmentSuffix"
                }
            }
        },
        "ApiDomainName": {
            "Type": "AWS::ApiGateway::DomainName",
            "Condition": "HasDomain",
            "Properties": {
                "DomainName": {
                    "Fn::Sub": "api-${EnvironmentSuffix}.${RootDomainName}"
                },
                "RegionalCertificateArn": {
                    "Ref": "Certificate"
                },
                "EndpointConfiguration": {
                    "Types": [
                        "REGIONAL"
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-Domain"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentSuffix"
                        }
                    }
                ]
            }
        },
        "ApiBasePathMapping": {
            "Type": "AWS::ApiGateway::BasePathMapping",
            "Condition": "HasDomain",
            "Properties": {
                "DomainName": {
                    "Ref": "ApiDomainName"
                },
                "RestApiId": {
                    "Ref": "FileProcessorApi"
                },
                "Stage": {
                    "Ref": "EnvironmentSuffix"
                }
            }
        },
        "ApiDnsRecord": {
            "Type": "AWS::Route53::RecordSet",
            "Condition": "HasDomain",
            "Properties": {
                "HostedZoneId": {
                    "Ref": "HostedZone"
                },
                "Name": {
                    "Fn::Sub": "api-${EnvironmentSuffix}.${RootDomainName}"
                },
                "Type": "A",
                "AliasTarget": {
                    "DNSName": {
                        "Fn::GetAtt": [
                            "ApiDomainName",
                            "RegionalDomainName"
                        ]
                    },
                    "HostedZoneId": {
                        "Fn::GetAtt": [
                            "ApiDomainName",
                            "RegionalHostedZoneId"
                        ]
                    }
                }
            }
        },
        "S3InvokePermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName": {
                    "Ref": "FileProcessorFunction"
                },
                "Action": "lambda:InvokeFunction",
                "Principal": "s3.amazonaws.com",
                "SourceAccount": {
                    "Ref": "AWS::AccountId"
                },
                "SourceArn": {
                    "Fn::Sub": "${FileProcessingBucket.Arn}/*"
                }
            }
        },
        "S3EventRule": {
            "Type": "AWS::Events::Rule",
            "Properties": {
                "Name": {
                    "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-S3EventRule"
                },
                "Description": "Trigger Lambda function when objects are created in S3 bucket",
                "EventPattern": {
                    "source": [
                        "aws.s3"
                    ],
                    "detail-type": [
                        "Object Created"
                    ],
                    "detail": {
                        "bucket": {
                            "name": [
                                {
                                    "Ref": "FileProcessingBucket"
                                }
                            ]
                        }
                    }
                },
                "State": "ENABLED",
                "Targets": [
                    {
                        "Arn": {
                            "Fn::GetAtt": [
                                "FileProcessorFunction",
                                "Arn"
                            ]
                        },
                        "Id": "FileProcessorTarget"
                    }
                ]
            }
        },
        "EventBridgeInvokeLambdaPermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName": {
                    "Ref": "FileProcessorFunction"
                },
                "Action": "lambda:InvokeFunction",
                "Principal": "events.amazonaws.com",
                "SourceArn": {
                    "Fn::GetAtt": [
                        "S3EventRule",
                        "Arn"
                    ]
                }
            }
        },
        "ApiGatewayInvokePermissionGet": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName": {
                    "Ref": "FileProcessorFunction"
                },
                "Action": "lambda:InvokeFunction",
                "Principal": "apigateway.amazonaws.com",
                "SourceArn": {
                    "Fn::Sub": "arn:aws:apigateway:${AWS::Region}::/restapis/${FileProcessorApi}/stages/${EnvironmentSuffix}/GET/process"
                }
            }
        },
        "ApiGatewayInvokePermissionPost": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName": {
                    "Ref": "FileProcessorFunction"
                },
                "Action": "lambda:InvokeFunction",
                "Principal": "apigateway.amazonaws.com",
                "SourceArn": {
                    "Fn::Sub": "arn:aws:apigateway:${AWS::Region}::/restapis/${FileProcessorApi}/stages/${EnvironmentSuffix}/POST/process"
                }
            }
        },
        "AlertTopic": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "TopicName": {
                    "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-Alerts"
                },
                "DisplayName": {
                    "Fn::Sub": "Serverless App Alerts - ${EnvironmentSuffix}"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-AlertTopic"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentSuffix"
                        }
                    }
                ]
            }
        },
        "LambdaErrorAlarm": {
            "Type": "AWS::CloudWatch::Alarm",
            "Properties": {
                "AlarmName": {
                    "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-LambdaErrors"
                },
                "AlarmDescription": "Alarm when Lambda error rate exceeds 5% over 5-minute period",
                "MetricName": "Errors",
                "Namespace": "AWS/Lambda",
                "Statistic": "Average",
                "Period": 300,
                "EvaluationPeriods": 1,
                "Threshold": 5,
                "ComparisonOperator": "GreaterThanThreshold",
                "Dimensions": [
                    {
                        "Name": "FunctionName",
                        "Value": {
                            "Ref": "FileProcessorFunction"
                        }
                    }
                ],
                "AlarmActions": [
                    {
                        "Ref": "AlertTopic"
                    }
                ],
                "TreatMissingData": "notBreaching",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "ServerlessApp-${EnvironmentSuffix}-ErrorAlarm"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "EnvironmentSuffix"
                        }
                    }
                ]
            }
        }
    },
    "Outputs": {
        "BucketName": {
            "Description": "Name of the S3 bucket for file uploads",
            "Value": {
                "Ref": "FileProcessingBucket"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-BucketName"
                }
            }
        },
        "LambdaFunctionName": {
            "Description": "Name of the Lambda function",
            "Value": {
                "Ref": "FileProcessorFunction"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-LambdaFunction"
                }
            }
        },
        "LambdaFunctionArn": {
            "Description": "ARN of the Lambda function",
            "Value": {
                "Fn::GetAtt": [
                    "FileProcessorFunction",
                    "Arn"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-LambdaFunctionArn"
                }
            }
        },
        "ApiGatewayUrl": {
            "Description": "API Gateway endpoint URL",
            "Value": {
                "Fn::Sub": "https://${FileProcessorApi}.execute-api.${AWS::Region}.amazonaws.com/${EnvironmentSuffix}/process"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-ApiUrl"
                }
            }
        },
        "CustomDomainUrl": {
            "Condition": "HasDomain",
            "Description": "Custom domain URL for the API",
            "Value": {
                "Fn::Sub": "https://api-${EnvironmentSuffix}.${RootDomainName}/process"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-CustomDomainUrl"
                }
            }
        },
        "HostedZoneId": {
            "Condition": "HasDomain",
            "Description": "Route 53 Hosted Zone ID",
            "Value": {
                "Ref": "HostedZone"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-HostedZoneId"
                }
            }
        },
        "HostedZoneNameServers": {
            "Condition": "HasDomain",
            "Description": "Name servers for the hosted zone (configure these with your domain registrar)",
            "Value": {
                "Fn::Join": [
                    ", ",
                    {
                        "Fn::GetAtt": [
                            "HostedZone",
                            "NameServers"
                        ]
                    }
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-NameServers"
                }
            }
        },
        "CertificateArn": {
            "Condition": "HasDomain",
            "Description": "ARN of the ACM certificate",
            "Value": {
                "Ref": "Certificate"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-CertificateArn"
                }
            }
        },
        "SNSTopicArn": {
            "Description": "SNS Topic ARN for alerts",
            "Value": {
                "Ref": "AlertTopic"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-AlertTopic"
                }
            }
        },
        "Environment": {
            "Description": "Environment suffix used for this deployment",
            "Value": {
                "Ref": "EnvironmentSuffix"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-Environment"
                }
            }
        },
        "StackName": {
            "Description": "Name of this CloudFormation stack",
            "Value": {
                "Ref": "AWS::StackName"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-StackName"
                }
            }
        }
    }
}