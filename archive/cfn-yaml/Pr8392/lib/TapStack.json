                    "From": 80,
                    "To": 80
                }
            }
        },
        "NetworkAclInboundHTTPS": {
            "Type": "AWS::EC2::NetworkAclEntry",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "NetworkAcl"
                },
                "RuleNumber": 110,
