{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Asynchronous event processing pipeline for financial transactions with FIFO queues, SNS filtering, and EventBridge integration",
    "Parameters": {
        "EnvironmentSuffix": {
            "Type": "String",
            "Description": "Suffix for resource names to support multiple parallel deployments (e.g., PR number from CI/CD)",
            "Default": "pr4056",
            "AllowedPattern": "^[a-zA-Z0-9\\-]*$",
            "ConstraintDescription": "Must contain only alphanumeric characters and hyphens"
        }
    },
    "Resources": {
        "TransactionKMSKey": {
            "Type": "AWS::KMS::Key",
            "Properties": {
                "Description": "Customer managed KMS key for transaction pipeline encryption",
                "KeyPolicy": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "Enable IAM User Permissions",
                            "Effect": "Allow",
                            "Principal": {
                                "AWS": {
                                    "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:root"
                                }
                            },
                            "Action": "kms:*",
                            "Resource": "*"
                        },
                        {
                            "Sid": "Allow services to use the key",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "sns.amazonaws.com",
                                    "sqs.amazonaws.com",
                                    "events.amazonaws.com",
                                    "cloudwatch.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "kms:Decrypt",
                                "kms:GenerateDataKey"
                            ],
                            "Resource": "*"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-kms-key"
                        }
                    }
                ]
            }
        },
        "TransactionKMSKeyAlias": {
            "Type": "AWS::KMS::Alias",
            "Properties": {
                "AliasName": {
                    "Fn::Sub": "alias/${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-kms-key"
                },
                "TargetKeyId": {
                    "Ref": "TransactionKMSKey"
                }
            }
        },
        "TransactionTopic": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "TopicName": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-transaction-topic.fifo"
                },
                "DisplayName": "Financial Transaction Events FIFO Topic",
                "FifoTopic": true,
                "ContentBasedDeduplication": true,
                "KmsMasterKeyId": {
                    "Ref": "TransactionKMSKey"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-sns-topic"
                        }
                    }
                ]
            }
        },
        "AlertsTopic": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "TopicName": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-alerts-topic"
                },
                "DisplayName": "Transaction Alerts Topic",
                "KmsMasterKeyId": {
                    "Ref": "TransactionKMSKey"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-alerts-sns-topic"
                        }
                    }
                ]
            }
        },
        "HighValueDLQ": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "QueueName": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-high-value-dlq.fifo"
                },
                "FifoQueue": true,
                "ContentBasedDeduplication": true,
                "MessageRetentionPeriod": 1209600,
                "VisibilityTimeout": 300,
                "ReceiveMessageWaitTimeSeconds": 20,
                "KmsMasterKeyId": {
                    "Ref": "TransactionKMSKey"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-high-value-dlq"
                        }
                    }
                ]
            }
        },
        "StandardValueDLQ": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "QueueName": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-standard-value-dlq.fifo"
                },
                "FifoQueue": true,
                "ContentBasedDeduplication": true,
                "MessageRetentionPeriod": 1209600,
                "VisibilityTimeout": 300,
                "ReceiveMessageWaitTimeSeconds": 20,
                "KmsMasterKeyId": {
                    "Ref": "TransactionKMSKey"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-standard-value-dlq"
                        }
                    }
                ]
            }
        },
        "LowValueDLQ": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "QueueName": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-low-value-dlq.fifo"
                },
                "FifoQueue": true,
                "ContentBasedDeduplication": true,
                "MessageRetentionPeriod": 1209600,
                "VisibilityTimeout": 300,
                "ReceiveMessageWaitTimeSeconds": 20,
                "KmsMasterKeyId": {
                    "Ref": "TransactionKMSKey"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-low-value-dlq"
                        }
                    }
                ]
            }
        },
        "HighValueQueue": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "QueueName": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-high-value-queue.fifo"
                },
                "FifoQueue": true,
                "ContentBasedDeduplication": true,
                "MessageRetentionPeriod": 1209600,
                "VisibilityTimeout": 300,
                "ReceiveMessageWaitTimeSeconds": 20,
                "KmsMasterKeyId": {
                    "Ref": "TransactionKMSKey"
                },
                "RedrivePolicy": {
                    "deadLetterTargetArn": {
                        "Fn::GetAtt": [
                            "HighValueDLQ",
                            "Arn"
                        ]
                    },
                    "maxReceiveCount": 3
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-high-value-queue"
                        }
                    }
                ]
            }
        },
        "StandardValueQueue": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "QueueName": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-standard-value-queue.fifo"
                },
                "FifoQueue": true,
                "ContentBasedDeduplication": true,
                "MessageRetentionPeriod": 1209600,
                "VisibilityTimeout": 300,
                "ReceiveMessageWaitTimeSeconds": 20,
                "KmsMasterKeyId": {
                    "Ref": "TransactionKMSKey"
                },
                "RedrivePolicy": {
                    "deadLetterTargetArn": {
                        "Fn::GetAtt": [
                            "StandardValueDLQ",
                            "Arn"
                        ]
                    },
                    "maxReceiveCount": 3
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-standard-value-queue"
                        }
                    }
                ]
            }
        },
        "LowValueQueue": {
            "Type": "AWS::SQS::Queue",
            "Properties": {
                "QueueName": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-low-value-queue.fifo"
                },
                "FifoQueue": true,
                "ContentBasedDeduplication": true,
                "MessageRetentionPeriod": 1209600,
                "VisibilityTimeout": 300,
                "ReceiveMessageWaitTimeSeconds": 20,
                "KmsMasterKeyId": {
                    "Ref": "TransactionKMSKey"
                },
                "RedrivePolicy": {
                    "deadLetterTargetArn": {
                        "Fn::GetAtt": [
                            "LowValueDLQ",
                            "Arn"
                        ]
                    },
                    "maxReceiveCount": 3
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-low-value-queue"
                        }
                    }
                ]
            }
        },
        "HighValueQueuePolicy": {
            "Type": "AWS::SQS::QueuePolicy",
            "Properties": {
                "Queues": [
                    {
                        "Ref": "HighValueQueue"
                    }
                ],
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "sns.amazonaws.com"
                            },
                            "Action": "SQS:SendMessage",
                            "Resource": {
                                "Fn::GetAtt": [
                                    "HighValueQueue",
                                    "Arn"
                                ]
                            },
                            "Condition": {
                                "ArnEquals": {
                                    "aws:SourceArn": {
                                        "Ref": "TransactionTopic"
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        },
        "StandardValueQueuePolicy": {
            "Type": "AWS::SQS::QueuePolicy",
            "Properties": {
                "Queues": [
                    {
                        "Ref": "StandardValueQueue"
                    }
                ],
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "sns.amazonaws.com"
                            },
                            "Action": "SQS:SendMessage",
                            "Resource": {
                                "Fn::GetAtt": [
                                    "StandardValueQueue",
                                    "Arn"
                                ]
                            },
                            "Condition": {
                                "ArnEquals": {
                                    "aws:SourceArn": {
                                        "Ref": "TransactionTopic"
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        },
        "LowValueQueuePolicy": {
            "Type": "AWS::SQS::QueuePolicy",
            "Properties": {
                "Queues": [
                    {
                        "Ref": "LowValueQueue"
                    }
                ],
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "sns.amazonaws.com"
                            },
                            "Action": "SQS:SendMessage",
                            "Resource": {
                                "Fn::GetAtt": [
                                    "LowValueQueue",
                                    "Arn"
                                ]
                            },
                            "Condition": {
                                "ArnEquals": {
                                    "aws:SourceArn": {
                                        "Ref": "TransactionTopic"
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        },
        "HighValueSubscription": {
            "Type": "AWS::SNS::Subscription",
            "Properties": {
                "Protocol": "sqs",
                "TopicArn": {
                    "Ref": "TransactionTopic"
                },
                "Endpoint": {
                    "Fn::GetAtt": [
                        "HighValueQueue",
                        "Arn"
                    ]
                },
                "FilterPolicy": {
                    "amount": [
                        {
                            "numeric": [
                                ">",
                                10000
                            ]
                        }
                    ]
                },
                "RawMessageDelivery": true
            }
        },
        "StandardValueSubscription": {
            "Type": "AWS::SNS::Subscription",
            "Properties": {
                "Protocol": "sqs",
                "TopicArn": {
                    "Ref": "TransactionTopic"
                },
                "Endpoint": {
                    "Fn::GetAtt": [
                        "StandardValueQueue",
                        "Arn"
                    ]
                },
                "FilterPolicy": {
                    "amount": [
                        {
                            "numeric": [
                                ">=",
                                1000,
                                "<=",
                                10000
                            ]
                        }
                    ]
                },
                "RawMessageDelivery": true
            }
        },
        "LowValueSubscription": {
            "Type": "AWS::SNS::Subscription",
            "Properties": {
                "Protocol": "sqs",
                "TopicArn": {
                    "Ref": "TransactionTopic"
                },
                "Endpoint": {
                    "Fn::GetAtt": [
                        "LowValueQueue",
                        "Arn"
                    ]
                },
                "FilterPolicy": {
                    "amount": [
                        {
                            "numeric": [
                                "<",
                                1000
                            ]
                        }
                    ]
                },
                "RawMessageDelivery": true
            }
        },
        "TransactionEventBus": {
            "Type": "AWS::Events::EventBus",
            "Properties": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-event-bus"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-event-bus"
                        }
                    }
                ]
            }
        },
        "FailedTransactionRule": {
            "Type": "AWS::Events::Rule",
            "Properties": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-failed-transaction-rule"
                },
                "Description": "Alert on failed transactions with amount > $5,000",
                "EventBusName": {
                    "Ref": "TransactionEventBus"
                },
                "EventPattern": {
                    "source": [
                        "transaction.processor"
                    ],
                    "detail-type": [
                        "Transaction Failed"
                    ],
                    "detail": {
                        "amount": [
                            {
                                "numeric": [
                                    ">",
                                    5000
                                ]
                            }
                        ]
                    }
                },
                "State": "ENABLED",
                "Targets": [
                    {
                        "Arn": {
                            "Ref": "AlertsTopic"
                        },
                        "Id": "1",
                        "RoleArn": {
                            "Fn::GetAtt": [
                                "EventBridgeRole",
                                "Arn"
                            ]
                        }
                    }
                ]
            }
        },
        "HighValueQueueAlarm": {
            "Type": "AWS::CloudWatch::Alarm",
            "Properties": {
                "AlarmName": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-high-value-queue-alarm"
                },
                "AlarmDescription": "Alert when high-value queue has > 1000 messages",
                "MetricName": "ApproximateNumberOfMessagesVisible",
                "Namespace": "AWS/SQS",
                "Statistic": "Maximum",
                "Period": 60,
                "EvaluationPeriods": 1,
                "Threshold": 1000,
                "ComparisonOperator": "GreaterThanThreshold",
                "Dimensions": [
                    {
                        "Name": "QueueName",
                        "Value": {
                            "Fn::GetAtt": [
                                "HighValueQueue",
                                "QueueName"
                            ]
                        }
                    }
                ],
                "AlarmActions": [
                    {
                        "Ref": "AlertsTopic"
                    }
                ],
                "TreatMissingData": "notBreaching"
            }
        },
        "StandardValueQueueAlarm": {
            "Type": "AWS::CloudWatch::Alarm",
            "Properties": {
                "AlarmName": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-standard-value-queue-alarm"
                },
                "AlarmDescription": "Alert when standard-value queue has > 1000 messages",
                "MetricName": "ApproximateNumberOfMessagesVisible",
                "Namespace": "AWS/SQS",
                "Statistic": "Maximum",
                "Period": 60,
                "EvaluationPeriods": 1,
                "Threshold": 1000,
                "ComparisonOperator": "GreaterThanThreshold",
                "Dimensions": [
                    {
                        "Name": "QueueName",
                        "Value": {
                            "Fn::GetAtt": [
                                "StandardValueQueue",
                                "QueueName"
                            ]
                        }
                    }
                ],
                "AlarmActions": [
                    {
                        "Ref": "AlertsTopic"
                    }
                ],
                "TreatMissingData": "notBreaching"
            }
        },
        "LowValueQueueAlarm": {
            "Type": "AWS::CloudWatch::Alarm",
            "Properties": {
                "AlarmName": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-low-value-queue-alarm"
                },
                "AlarmDescription": "Alert when low-value queue has > 1000 messages",
                "MetricName": "ApproximateNumberOfMessagesVisible",
                "Namespace": "AWS/SQS",
                "Statistic": "Maximum",
                "Period": 60,
                "EvaluationPeriods": 1,
                "Threshold": 1000,
                "ComparisonOperator": "GreaterThanThreshold",
                "Dimensions": [
                    {
                        "Name": "QueueName",
                        "Value": {
                            "Fn::GetAtt": [
                                "LowValueQueue",
                                "QueueName"
                            ]
                        }
                    }
                ],
                "AlarmActions": [
                    {
                        "Ref": "AlertsTopic"
                    }
                ],
                "TreatMissingData": "notBreaching"
            }
        },
        "EventBridgeRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {
                    "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-eventbridge-role"
                },
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "events.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": "EventBridgeToSNSPolicy",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "sns:Publish"
                                    ],
                                    "Resource": {
                                        "Ref": "AlertsTopic"
                                    }
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "kms:Decrypt",
                                        "kms:GenerateDataKey"
                                    ],
                                    "Resource": {
                                        "Fn::GetAtt": [
                                            "TransactionKMSKey",
                                            "Arn"
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": "${AWS::StackName}-${AWS::Region}-${EnvironmentSuffix}-eventbridge-role"
                        }
                    }
                ]
            }
        }
    },
    "Outputs": {
        "HighValueQueueURL": {
            "Description": "URL of the high-value transactions queue",
            "Value": {
                "Ref": "HighValueQueue"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-HighValueQueueURL"
                }
            }
        },
        "StandardValueQueueURL": {
            "Description": "URL of the standard-value transactions queue",
            "Value": {
                "Ref": "StandardValueQueue"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-StandardValueQueueURL"
                }
            }
        },
        "LowValueQueueURL": {
            "Description": "URL of the low-value transactions queue",
            "Value": {
                "Ref": "LowValueQueue"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-LowValueQueueURL"
                }
            }
        },
        "TransactionTopicArn": {
            "Description": "ARN of the transaction SNS topic",
            "Value": {
                "Ref": "TransactionTopic"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-TransactionTopicArn"
                }
            }
        },
        "EventBusName": {
            "Description": "Name of the custom EventBridge event bus",
            "Value": {
                "Ref": "TransactionEventBus"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-EventBusName"
                }
            }
        },
        "KMSKeyArn": {
            "Description": "ARN of the KMS key used for encryption",
            "Value": {
                "Fn::GetAtt": [
                    "TransactionKMSKey",
                    "Arn"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-KMSKeyArn"
                }
            }
        },
        "KMSKeyId": {
            "Description": "ID of the KMS key used for encryption",
            "Value": {
                "Ref": "TransactionKMSKey"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-KMSKeyId"
                }
            }
        },
        "KMSKeyAlias": {
            "Description": "Alias of the KMS key used for encryption",
            "Value": {
                "Ref": "TransactionKMSKeyAlias"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-KMSKeyAlias"
                }
            }
        },
        "AlertsTopicArn": {
            "Description": "ARN of the alerts SNS topic",
            "Value": {
                "Ref": "AlertsTopic"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-AlertsTopicArn"
                }
            }
        },
        "AlertsTopicName": {
            "Description": "Name of the alerts SNS topic",
            "Value": {
                "Fn::GetAtt": [
                    "AlertsTopic",
                    "TopicName"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-AlertsTopicName"
                }
            }
        },
        "TransactionTopicName": {
            "Description": "Name of the transaction SNS topic",
            "Value": {
                "Fn::GetAtt": [
                    "TransactionTopic",
                    "TopicName"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-TransactionTopicName"
                }
            }
        },
        "HighValueDLQUrl": {
            "Description": "URL of the high-value dead letter queue",
            "Value": {
                "Ref": "HighValueDLQ"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-HighValueDLQUrl"
                }
            }
        },
        "HighValueDLQArn": {
            "Description": "ARN of the high-value dead letter queue",
            "Value": {
                "Fn::GetAtt": [
                    "HighValueDLQ",
                    "Arn"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-HighValueDLQArn"
                }
            }
        },
        "StandardValueDLQUrl": {
            "Description": "URL of the standard-value dead letter queue",
            "Value": {
                "Ref": "StandardValueDLQ"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-StandardValueDLQUrl"
                }
            }
        },
        "StandardValueDLQArn": {
            "Description": "ARN of the standard-value dead letter queue",
            "Value": {
                "Fn::GetAtt": [
                    "StandardValueDLQ",
                    "Arn"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-StandardValueDLQArn"
                }
            }
        },
        "LowValueDLQUrl": {
            "Description": "URL of the low-value dead letter queue",
            "Value": {
                "Ref": "LowValueDLQ"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-LowValueDLQUrl"
                }
            }
        },
        "LowValueDLQArn": {
            "Description": "ARN of the low-value dead letter queue",
            "Value": {
                "Fn::GetAtt": [
                    "LowValueDLQ",
                    "Arn"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-LowValueDLQArn"
                }
            }
        },
        "HighValueQueueArn": {
            "Description": "ARN of the high-value transactions queue",
            "Value": {
                "Fn::GetAtt": [
                    "HighValueQueue",
                    "Arn"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-HighValueQueueArn"
                }
            }
        },
        "HighValueQueueName": {
            "Description": "Name of the high-value transactions queue",
            "Value": {
                "Fn::GetAtt": [
                    "HighValueQueue",
                    "QueueName"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-HighValueQueueName"
                }
            }
        },
        "StandardValueQueueArn": {
            "Description": "ARN of the standard-value transactions queue",
            "Value": {
                "Fn::GetAtt": [
                    "StandardValueQueue",
                    "Arn"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-StandardValueQueueArn"
                }
            }
        },
        "StandardValueQueueName": {
            "Description": "Name of the standard-value transactions queue",
            "Value": {
                "Fn::GetAtt": [
                    "StandardValueQueue",
                    "QueueName"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-StandardValueQueueName"
                }
            }
