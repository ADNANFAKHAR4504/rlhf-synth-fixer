                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${TeamName}-${EnvironmentSuffix}-waf-arn"
                }
            }
        },
        "LoadBalancerDNS": {
            "Description": "Application Load Balancer DNS Name",
            "Value": {
                "Fn::GetAtt": [
