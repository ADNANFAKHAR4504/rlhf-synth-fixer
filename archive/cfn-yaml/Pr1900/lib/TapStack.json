                "Name": {
                    "Fn::Sub": "${TeamName}-${EnvironmentSuffix}-asg-name"
                }
            }
        },
        "WebACLArn": {
            "Description": "WAF Web ACL ARN",
            "Value": {
                "Fn::GetAtt": [
                    "WebACL",
