        "CloudWatchLogGroupName": {
            "Description": "CloudWatch Log Group Name",
            "Value": {
                "Ref": "CloudWatchLogGroup"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${TeamName}-${EnvironmentSuffix}-log-group"
                }
            }
        }
    }
