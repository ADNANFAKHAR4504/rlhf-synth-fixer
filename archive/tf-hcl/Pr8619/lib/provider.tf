terraform {
  required_version = ">= 1.5"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.5"
    }
  }
}

provider "aws" {
  region = var.aws_region

  default_tags {
    tags = {
      Environment    = var.environment_suffix
      Project        = var.project_name
      MigrationPhase = var.migration_phase
      ManagedBy      = "Terraform"
    }
  }
}