#!/bin/bash
set -xe

yum update -y
yum install -y python3 python3-pip amazon-cloudwatch-agent
python3 -m pip install --upgrade pip
python3 -m pip install flask pymysql

mkdir -p /opt/example-app
mkdir -p /var/log/example-app

cat <<'PYAPP' >/opt/example-app/app.py
${app_source}
PYAPP

chmod +x /opt/example-app/app.py

cat <<SERVICE >/etc/systemd/system/example-app.service
[Unit]
Description=Example Trading Platform Application
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/example-app
Environment="DB_WRITE_HOST=${db_write_host}"
Environment="DB_READ_HOST=${db_read_host}"
Environment="DB_USER=admin"
Environment="DB_PASSWORD=${db_password}"
Environment="DB_NAME=tradingdb"
Environment="DB_PORT=3306"
Environment="APP_LOG_PATH=${app_log_path}"
ExecStart=/usr/bin/python3 /opt/example-app/app.py
Restart=always

[Install]
WantedBy=multi-user.target
SERVICE

cat <<CWCONFIG >/opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent.json
{
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "${app_log_path}",
            "log_group_name": "${cw_log_group}",
            "log_stream_name": "{instance_id}",
            "timestamp_format": "%Y-%m-%d %H:%M:%S",
            "timezone": "UTC"
          }
        ]
      }
    },
    "log_stream_name": "{instance_id}",
    "force_flush_interval": 15
  }
}
CWCONFIG

systemctl daemon-reload
systemctl enable example-app.service
systemctl restart example-app.service

/opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent-ctl -a stop || true
/opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent-ctl \
  -a fetch-config \
  -m ec2 \
  -c file:/opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent.json \
  -s

systemctl enable amazon-cloudwatch-agent
