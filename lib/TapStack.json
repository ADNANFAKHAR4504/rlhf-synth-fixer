{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "S3 + Lambda Event Trigger Stack with Versioning and Public Read Access",
    "Resources": {
        "CorpBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": {
                    "Fn::Sub": "corp-s3-assets"
                },
                "VersioningConfiguration": {
                    "Status": "Enabled"
                },
                "Tags": [
                    {
                        "Key": "Environment",
                        "Value": "Production"
                    },
                    {
                        "Key": "Name",
                        "Value": "corp-s3-bucket"
                    },
                    {
                        "Key": "ManagedBy",
                        "Value": "CloudFormation"
                    }
                ]
            }
        },
        "CorpBucketPolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "Properties": {
                "Bucket": {
                    "Ref": "CorpBucket"
                },
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "PublicReadGetObject",
                            "Effect": "Allow",
                            "Principal": "*",
                            "Action": "s3:GetObject",
                            "Resource": {
                                "Fn::Sub": "${CorpBucket.Arn}/*"
                            }
                        }
                    ]
                }
            }
        },
        "CorpLambdaExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "lambda.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": "LambdaBasicExecution",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Resource": "*"
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "s3:GetObject",
                                        "s3:ListBucket"
                                    ],
                                    "Resource": [
                                        {
                                            "Fn::GetAtt": [
                                                "CorpBucket",
                                                "Arn"
                                            ]
                                        },
                                        {
                                            "Fn::Sub": "${CorpBucket.Arn}/*"
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "ManagedBy",
                        "Value": "CloudFormation"
                    }
                ]
            }
        },
        "CorpLambdaFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "FunctionName": {
                    "Fn::Sub": "corp-s3-event-handler-${AWS::StackName}"
                },
                "Runtime": "nodejs18.x",
                "Handler": "index.handler",
                "Role": {
                    "Fn::GetAtt": [
                        "CorpLambdaExecutionRole",
                        "Arn"
                    ]
                },
                "Code": {
                    "ZipFile": "exports.handler = async (event) => {\n  console.log('Received event:', JSON.stringify(event, null, 2));\n  try {\n    const record = event.Records[0];\n    const bucket = record.s3.bucket.name;\n    const key = decodeURIComponent(record.s3.object.key.replace(/\\+/g, ' '));\n    console.log(`Object Key: ${key}, Bucket: ${bucket}`);\n    return { statusCode: 200, body: 'Success' };\n  } catch (err) {\n    console.error('Error processing S3 event', err);\n    throw err;\n  }\n};\n"
                },
                "Environment": {
                    "Variables": {
                        "BUCKET_NAME": {
                            "Ref": "CorpBucket"
                        },
                        "ENV": "Production"
                    }
                },
                "Tags": [
                    {
                        "Key": "ManagedBy",
                        "Value": "CloudFormation"
                    }
                ]
            }
        },
        "CorpLambdaLogGroup": {
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupName": {
                    "Fn::Sub": "/aws/lambda/corp-s3-event-handler-${AWS::StackName}"
                },
                "RetentionInDays": 14,
                "Tags": [
                    {
                        "Key": "Environment",
                        "Value": "Production"
                    },
                    {
                        "Key": "ManagedBy",
                        "Value": "CloudFormation"
                    }
                ]
            }
        },
        "CorpLambdaInvokePermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName": {
                    "Ref": "CorpLambdaFunction"
                },
                "Action": "lambda:InvokeFunction",
                "Principal": "s3.amazonaws.com",
                "SourceArn": {
                    "Fn::GetAtt": [
                        "CorpBucket",
                        "Arn"
                    ]
                },
                "SourceAccount": {
                    "Ref": "AWS::AccountId"
                }
            }
        }
    },
    "Outputs": {
        "BucketName": {
            "Description": "Name of the S3 bucket",
            "Value": {
                "Ref": "CorpBucket"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-BucketName"
                }
            }
        },
        "BucketArn": {
            "Description": "ARN of the S3 bucket",
            "Value": {
                "Fn::GetAtt": [
                    "CorpBucket",
                    "Arn"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-BucketArn"
                }
            }
        },
        "LambdaFunctionName": {
            "Description": "Name of the Lambda function",
            "Value": {
                "Ref": "CorpLambdaFunction"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-LambdaFunctionName"
                }
            }
        },
        "LambdaFunctionArn": {
            "Description": "ARN of the Lambda function",
            "Value": {
                "Fn::GetAtt": [
                    "CorpLambdaFunction",
                    "Arn"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-LambdaFunctionArn"
                }
            }
        },
        "LambdaExecutionRoleArn": {
            "Description": "ARN of the IAM role for Lambda execution",
            "Value": {
                "Fn::GetAtt": [
                    "CorpLambdaExecutionRole",
                    "Arn"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-LambdaExecutionRoleArn"
                }
            }
        },
        "LambdaLogGroupName": {
            "Description": "Name of the CloudWatch Log Group for the Lambda function",
            "Value": {
                "Ref": "CorpLambdaLogGroup"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-LambdaLogGroupName"
                }
            }
        },
        "S3NotificationInstructions": {
            "Description": "Manual command to configure S3 to invoke Lambda",
            "Value": {
                "Fn::Sub": "Run the following CLI command after deployment:\naws s3api put-bucket-notification-configuration \\\n  --bucket ${CorpBucket} \\\n  --notification-configuration '{\n    \"LambdaFunctionConfigurations\": [{\n      \"LambdaFunctionArn\": \"${CorpLambdaFunction.Arn}\",\n      \"Events\": [\"s3:ObjectCreated:*\"]\n    }]\n  }'"
            }
        }
    }
}