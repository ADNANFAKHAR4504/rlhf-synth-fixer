{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Secure cloud infrastructure with encryption, monitoring, and least privilege access",
  "Parameters": {
    "Environment": {
      "Type": "String",
      "Default": "production",
      "Description": "Environment name for resource tagging"
    },
    "DBUsername": {
      "Type": "String",
      "Default": "admin", 
      "Description": "Database administrator username",
      "MinLength": 4,
      "MaxLength": 16,
      "AllowedPattern": "[a-zA-Z][a-zA-Z0-9]*"
    },
    "DBPassword": {
      "Type": "String",
      "NoEcho": true,
      "Description": "Database administrator password",
      "MinLength": 8,
      "MaxLength": 41,
      "AllowedPattern": "[a-zA-Z0-9]*"
    }
  },
  "Resources": {
    "MasterKMSKey": {
      "Type": "AWS::KMS::Key",
      "Properties": {
        "Description": "Master KMS key for encrypting all resources",
        "KeyPolicy": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "Enable IAM User Permissions",
              "Effect": "Allow",
              "Principal": {
                "AWS": {
                  "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:root"
                }
              },
              "Action": "kms:*",
              "Resource": "*"
            },
            {
              "Sid": "Allow CloudWatch Logs",
              "Effect": "Allow",
              "Principal": {
                "Service": "logs.us-west-2.amazonaws.com"
              },
              "Action": [
                "kms:Encrypt",
                "kms:Decrypt", 
                "kms:ReEncrypt*",
                "kms:GenerateDataKey*",
                "kms:DescribeKey"
              ],
              "Resource": "*"
            }
          ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${Environment}-master-kms-key"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "MasterKMSKeyAlias": {
      "Type": "AWS::KMS::Alias",
      "Properties": {
        "AliasName": {
          "Fn::Sub": "alias/${Environment}-master-key"
        },
        "TargetKeyId": {
          "Ref": "MasterKMSKey"
        }
      }
    },
    "SecurityLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": {
          "Fn::Sub": "/aws/security/${Environment}"
        },
        "RetentionInDays": 365,
        "KmsKeyId": {
          "Fn::GetAtt": [
            "MasterKMSKey",
            "Arn"
          ]
        },
        "Tags": [
          {
            "Key": "Name", 
            "Value": {
              "Fn::Sub": "${Environment}-security-logs"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "CloudTrail": {
      "Type": "AWS::CloudTrail::Trail",
      "Properties": {
        "TrailName": {
          "Fn::Sub": "${Environment}-security-trail"
        },
        "S3BucketName": {
          "Ref": "CloudTrailBucket"
        },
        "S3KeyPrefix": "cloudtrail-logs",
        "IncludeGlobalServiceEvents": true,
        "IsMultiRegionTrail": false,
        "EnableLogFileValidation": true,
        "KMSKeyId": {
          "Ref": "MasterKMSKey"
        },
        "CloudWatchLogsLogGroupArn": {
          "Fn::GetAtt": [
            "SecurityLogGroup",
            "Arn"
          ]
        },
        "CloudWatchLogsRoleArn": {
          "Fn::GetAtt": [
            "CloudTrailLogsRole", 
            "Arn"
          ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${Environment}-cloudtrail"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "CloudTrailBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Sub": "${Environment}-cloudtrail-logs-${AWS::AccountId}"
        },
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "aws:kms",
                "KMSMasterKeyID": {
                  "Ref": "MasterKMSKey"
                }
              },
              "BucketKeyEnabled": true
            }
          ]
        },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": true,
          "BlockPublicPolicy": true,
          "IgnorePublicAcls": true,
          "RestrictPublicBuckets": true
        },
        "VersioningConfiguration": {
          "Status": "Enabled"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${Environment}-cloudtrail-bucket"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "ApplicationDataBucket": {
      "Type": "AWS::S3::Bucket", 
      "Properties": {
        "BucketName": {
          "Fn::Sub": "${Environment}-app-data-${AWS::AccountId}"
        },
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "aws:kms",
                "KMSMasterKeyID": {
                  "Ref": "MasterKMSKey"
                }
              },
              "BucketKeyEnabled": true
            }
          ]
        },
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": true,
          "BlockPublicPolicy": true,
          "IgnorePublicAcls": true,
          "RestrictPublicBuckets": true
        },
        "VersioningConfiguration": {
          "Status": "Enabled"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${Environment}-app-data-bucket"
            }
          },
          {
            "Key": "Environment", 
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "VPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": "10.0.0.0/16",
        "EnableDnsHostnames": true,
        "EnableDnsSupport": true,
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${Environment}-vpc"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "PrivateSubnet1": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "CidrBlock": "10.0.1.0/24",
        "AvailabilityZone": "us-west-2a",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${Environment}-private-subnet-1"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "PrivateSubnet2": {
      "Type": "AWS::EC2::Subnet", 
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "CidrBlock": "10.0.2.0/24",
        "AvailabilityZone": "us-west-2b",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${Environment}-private-subnet-2"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "DatabaseInstance": {
      "Type": "AWS::RDS::DBInstance",
      "DeletionPolicy": "Snapshot",
      "Properties": {
        "DBInstanceIdentifier": {
          "Fn::Sub": "${Environment}-database"
        },
        "DBInstanceClass": "db.t3.micro",
        "Engine": "mysql",
        "EngineVersion": "8.0.35",
        "MasterUsername": {
          "Ref": "DBUsername"
        },
        "MasterUserPassword": {
          "Ref": "DBPassword"
        },
        "AllocatedStorage": 20,
        "StorageType": "gp2",
        "StorageEncrypted": true,
        "KmsKeyId": {
          "Ref": "MasterKMSKey"
        },
        "PubliclyAccessible": false,
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${Environment}-database"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "EncryptedEBSVolume": {
      "Type": "AWS::EC2::Volume",
      "Properties": {
        "Size": 10,
        "VolumeType": "gp3",
        "Encrypted": true,
        "KmsKeyId": {
          "Ref": "MasterKMSKey"
        },
        "AvailabilityZone": "us-west-2a",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${Environment}-encrypted-volume"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "ApplicationRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "ec2.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "ApplicationS3Policy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:GetObject",
                    "s3:PutObject",
                    "s3:DeleteObject"
                  ],
                  "Resource": {
                    "Fn::Sub": "${ApplicationDataBucket}/*"
                  }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:ListBucket"
                  ],
                  "Resource": {
                    "Fn::GetAtt": [
                      "ApplicationDataBucket",
                      "Arn"
                    ]
                  }
                }
              ]
            }
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${Environment}-application-role"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "CloudTrailLogsRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "cloudtrail.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "CloudTrailLogsPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:PutLogEvents",
                    "logs:CreateLogGroup", 
                    "logs:CreateLogStream"
                  ],
                  "Resource": {
                    "Fn::GetAtt": [
                      "SecurityLogGroup",
                      "Arn"
                    ]
                  }
                }
              ]
            }
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "${Environment}-cloudtrail-logs-role"
            }
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "VPCId": {
      "Description": "VPC ID",
      "Value": {
        "Ref": "VPC"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${Environment}-vpc-id"
        }
      }
    },
    "KMSKeyId": {
      "Description": "KMS Key ID for encryption",
      "Value": {
        "Ref": "MasterKMSKey"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${Environment}-kms-key-id"
        }
      }
    },
    "DatabaseEndpoint": {
      "Description": "RDS Database Endpoint",
      "Value": {
        "Fn::GetAtt": [
          "DatabaseInstance",
          "Endpoint.Address"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${Environment}-database-endpoint"
        }
      }
    },
    "ApplicationDataBucket": {
      "Description": "S3 Bucket for application data",
      "Value": {
        "Ref": "ApplicationDataBucket"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${Environment}-app-data-bucket"
        }
      }
    },
    "CloudTrailBucket": {
      "Description": "S3 Bucket for CloudTrail logs", 
      "Value": {
        "Ref": "CloudTrailBucket"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${Environment}-cloudtrail-bucket"
        }
      }
    },
    "ApplicationRoleArn": {
      "Description": "Application IAM Role ARN",
      "Value": {
        "Fn::GetAtt": [
          "ApplicationRole",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${Environment}-application-role-arn"
        }
      }
    },
    "SecurityLogGroup": {
      "Description": "CloudWatch Log Group for security logs",
      "Value": {
        "Ref": "SecurityLogGroup"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${Environment}-security-log-group"
        }
      }
    }
  }
}