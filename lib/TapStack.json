      "Properties": {
        "Name": {
          "Fn::Sub": "loan-app-alb-vs1-${EnvironmentSuffix}"
        },
        "Type": "application",
        "Scheme": "internet-facing",
        "IpAddressType": "ipv4",
        "Subnets": [
