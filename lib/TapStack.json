{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Transform": "AWS::Serverless-2016-10-31",
    "Description": "Serverless application with Lambda functions and API Gateway for user management",
    "Parameters": {
        "Environment": {
            "Type": "String",
            "Default": "dev",
            "AllowedValues": [
                "dev",
                "staging",
                "prod"
            ],
            "Description": "Environment name for the application"
        },
        "LogLevel": {
            "Type": "String",
            "Default": "INFO",
            "AllowedValues": [
                "DEBUG",
                "INFO",
                "WARN",
                "ERROR"
            ],
            "Description": "Log level for Lambda functions"
        }
    },
    "Globals": {
        "Function": {
            "Runtime": "python3.9",
            "Timeout": 30,
            "MemorySize": 128,
            "Environment": {
                "Variables": {
                    "ENVIRONMENT": {
                        "Ref": "Environment"
                    },
                    "LOG_LEVEL": {
                        "Ref": "LogLevel"
                    },
                    "DYNAMODB_TABLE": {
                        "Ref": "UserTable"
                    }
                }
            }
        }
    },
    "Resources": {
        "UserTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "TableName": {
                    "Fn::Sub": "${Environment}-users"
                },
                "BillingMode": "PAY_PER_REQUEST",
                "AttributeDefinitions": [
                    {
                        "AttributeName": "id",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "id",
                        "KeyType": "HASH"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "Environment"
                        }
                    }
                ]
            }
        },
        "LambdaExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "lambda.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
                ],
                "Policies": [
                    {
                        "PolicyName": "DynamoDBAccess",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "dynamodb:GetItem",
                                        "dynamodb:PutItem",
                                        "dynamodb:UpdateItem",
                                        "dynamodb:DeleteItem",
                                        "dynamodb:Query",
                                        "dynamodb:Scan"
                                    ],
                                    "Resource": {
                                        "Fn::GetAtt": [
                                            "UserTable",
                                            "Arn"
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "CreateUserFunction": {
            "Type": "AWS::Serverless::Function",
            "Properties": {
                "FunctionName": {
                    "Fn::Sub": "${Environment}-create-user"
                },
                "InlineCode": "import json\nimport os\nimport uuid\nimport boto3\nfrom datetime import datetime\n\ndef lambda_handler(event, context):\n    # Feature flag check\n    if os.environ.get('FEATURE_FLAG_VALIDATION', 'false').lower() == 'true':\n        print(\"Feature flag validation is enabled\")\n    \n    try:\n        # Parse request body\n        body = json.loads(event.get('body', '{}'))\n        \n        # Generate user ID and timestamp\n        user_id = str(uuid.uuid4())\n        timestamp = datetime.utcnow().isoformat()\n        \n        # Create user record\n        user_data = {\n            'id': user_id,\n            'name': body.get('name', ''),\n            'email': body.get('email', ''),\n            'created_at': timestamp,\n            'updated_at': timestamp\n        }\n        \n        # Store in DynamoDB\n        dynamodb = boto3.resource('dynamodb')\n        table = dynamodb.Table(os.environ['DYNAMODB_TABLE'])\n        table.put_item(Item=user_data)\n        \n        return {\n            'statusCode': 201,\n            'headers': {\n                'Content-Type': 'application/json',\n                'Access-Control-Allow-Origin': '*',\n                'Access-Control-Allow-Headers': 'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token',\n                'Access-Control-Allow-Methods': 'POST,OPTIONS'\n            },\n            'body': json.dumps(user_data)\n        }\n    except Exception as e:\n        return {\n            'statusCode': 500,\n            'headers': {\n                'Content-Type': 'application/json',\n                'Access-Control-Allow-Origin': '*'\n            },\n            'body': json.dumps({'error': str(e)})\n        }",
                "Handler": "index.lambda_handler",
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaExecutionRole",
                        "Arn"
                    ]
                },
                "Environment": {
                    "Variables": {
                        "FEATURE_FLAG_VALIDATION": "true"
                    }
                },
                "Events": {
                    "CreateUserApi": {
                        "Type": "Api",
                        "Properties": {
                            "RestApiId": {
                                "Ref": "UserApi"
                            },
                            "Path": "/user",
                            "Method": "POST"
                        }
                    }
                }
            }
        },
        "GetUserFunction": {
            "Type": "AWS::Serverless::Function",
            "Properties": {
                "FunctionName": {
                    "Fn::Sub": "${Environment}-get-user"
                },
                "InlineCode": "import json\nimport os\nimport boto3\nfrom boto3.dynamodb.conditions import Key\n\ndef lambda_handler(event, context):\n    # Feature flag check\n    if os.environ.get('FEATURE_FLAG_CACHING', 'false').lower() == 'true':\n        print(\"Feature flag caching is enabled\")\n    \n    try:\n        # Extract user ID from path parameters\n        user_id = event['pathParameters']['id']\n        \n        # Get user from DynamoDB\n        dynamodb = boto3.resource('dynamodb')\n        table = dynamodb.Table(os.environ['DYNAMODB_TABLE'])\n        \n        response = table.get_item(Key={'id': user_id})\n        \n        if 'Item' in response:\n            return {\n                'statusCode': 200,\n                'headers': {\n                    'Content-Type': 'application/json',\n                    'Access-Control-Allow-Origin': '*',\n                    'Access-Control-Allow-Headers': 'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token',\n                    'Access-Control-Allow-Methods': 'GET,OPTIONS'\n                },\n                'body': json.dumps(response['Item'], default=str)\n            }\n        else:\n            return {\n                'statusCode': 404,\n                'headers': {\n                    'Content-Type': 'application/json',\n                    'Access-Control-Allow-Origin': '*'\n                },\n                'body': json.dumps({'error': 'User not found'})\n            }\n    except KeyError as e:\n        return {\n            'statusCode': 400,\n            'headers': {\n                'Content-Type': 'application/json',\n                'Access-Control-Allow-Origin': '*'\n            },\n            'body': json.dumps({'error': f'Missing parameter: {str(e)}'})\n        }\n    except Exception as e:\n        return {\n            'statusCode': 500,\n            'headers': {\n                'Content-Type': 'application/json',\n                'Access-Control-Allow-Origin': '*'\n            },\n            'body': json.dumps({'error': str(e)})\n        }",
                "Handler": "index.lambda_handler",
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaExecutionRole",
                        "Arn"
                    ]
                },
                "Environment": {
                    "Variables": {
                        "FEATURE_FLAG_CACHING": "false"
                    }
                },
                "Events": {
                    "GetUserApi": {
                        "Type": "Api",
                        "Properties": {
                            "RestApiId": {
                                "Ref": "UserApi"
                            },
                            "Path": "/user/{id}",
                            "Method": "GET"
                        }
                    }
                }
            }
        },
        "UserApi": {
            "Type": "AWS::Serverless::Api",
            "Properties": {
                "Name": {
                    "Fn::Sub": "${Environment}-user-api"
                },
                "StageName": {
                    "Ref": "Environment"
                },
                "Cors": {
                    "AllowMethods": "'GET,POST,OPTIONS'",
                    "AllowHeaders": "'Content-Type,X-Amz-Date,Authorization,X-Api-Key,X-Amz-Security-Token'",
                    "AllowOrigin": "'*'"
                },
                "DefinitionBody": {
                    "openapi": "3.0.1",
                    "info": {
                        "title": "User Management API",
                        "version": "1.0.0"
                    },
                    "paths": {
                        "/user": {
                            "post": {
                                "x-amazon-apigateway-integration": {
                                    "httpMethod": "POST",
                                    "type": "aws_proxy",
                                    "uri": {
                                        "Fn::Sub": "arn:aws:apigateway:${AWS::Region}:lambda:path/2015-03-31/functions/${CreateUserFunction.Arn}/invocations"
                                    }
                                },
                                "responses": {
                                    "200": {
                                        "description": "User created successfully"
                                    }
                                }
                            }
                        },
                        "/user/{id}": {
                            "get": {
                                "parameters": [
                                    {
                                        "name": "id",
                                        "in": "path",
                                        "required": true,
                                        "schema": {
                                            "type": "string"
                                        }
                                    }
                                ],
                                "x-amazon-apigateway-integration": {
                                    "httpMethod": "POST",
                                    "type": "aws_proxy",
                                    "uri": {
                                        "Fn::Sub": "arn:aws:apigateway:${AWS::Region}:lambda:path/2015-03-31/functions/${GetUserFunction.Arn}/invocations"
                                    }
                                },
                                "responses": {
                                    "200": {
                                        "description": "User retrieved successfully"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "CreateUserFunctionPermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName": {
                    "Ref": "CreateUserFunction"
                },
                "Action": "lambda:InvokeFunction",
                "Principal": "apigateway.amazonaws.com",
                "SourceArn": {
                    "Fn::Sub": "${UserApi}/*/POST/user"
                }
            }
        },
        "GetUserFunctionPermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName": {
                    "Ref": "GetUserFunction"
                },
                "Action": "lambda:InvokeFunction",
                "Principal": "apigateway.amazonaws.com",
                "SourceArn": {
                    "Fn::Sub": "${UserApi}/*/GET/user/*"
                }
            }
        }
    },
    "Outputs": {
        "ApiGatewayUrl": {
            "Description": "API Gateway endpoint URL",
            "Value": {
                "Fn::Sub": "https://${UserApi}.execute-api.${AWS::Region}.amazonaws.com/${Environment}"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-ApiUrl"
                }
            }
        },
        "CreateUserFunctionArn": {
            "Description": "Create User Lambda Function ARN",
            "Value": {
                "Fn::GetAtt": [
                    "CreateUserFunction",
                    "Arn"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-CreateUserFunction"
                }
            }
        },
        "GetUserFunctionArn": {
            "Description": "Get User Lambda Function ARN",
            "Value": {
                "Fn::GetAtt": [
                    "GetUserFunction",
                    "Arn"
                ]
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-GetUserFunction"
                }
            }
        },
        "DynamoDBTableName": {
            "Description": "DynamoDB Table Name",
            "Value": {
                "Ref": "UserTable"
            },
            "Export": {
                "Name": {
                    "Fn::Sub": "${AWS::StackName}-UserTable"
                }
            }
        }
    }
}