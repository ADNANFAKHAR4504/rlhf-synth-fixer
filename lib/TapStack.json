{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "CloudFormation template to deploy a Lambda function triggered by an S3 event on object creation.",
    "Parameters": {
        "BucketName": {
            "Type": "String",
            "Description": "The name of the S3 bucket that will trigger the Lambda function.",
            "Default": "bucket-243911"
        },
        "LambdaFunctionName": {
            "Type": "String",
            "Description": "The name of the Lambda function to be created.",
            "Default": "lambda-243911"
        },
        "LambdaHandler": {
            "Type": "String",
            "Default": "index.handler",
            "Description": "The handler for the Lambda function."
        },
        "LambdaRuntime": {
            "Type": "String",
            "Default": "nodejs22.x",
            "Description": "The runtime for the Lambda function."
        }
    },
    "Resources": {
        "S3Bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": {
                    "Ref": "BucketName"
                },
                "NotificationConfiguration": {
                    "LambdaConfigurations": [
                        {
                            "Event": "s3:ObjectCreated:*",
                            "Function": {
                                "Fn::GetAtt": [
                                    "LambdaFunction",
                                    "Arn"
                                ]
                            }
                        }
                    ]
                }
            }
        },
        "LambdaExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "lambda.amazonaws.com"
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": "LambdaS3AccessPolicy",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "s3:GetObject"
                                    ],
                                    "Resource": {
                                        "Fn::Sub": "arn:aws:s3:::${BucketName}/*"
                                    }
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "LambdaFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "FunctionName": {
                    "Ref": "LambdaFunctionName"
                },
                "Handler": {
                    "Ref": "LambdaHandler"
                },
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaExecutionRole",
                        "Arn"
                    ]
                },
                "Runtime": {
                    "Ref": "LambdaRuntime"
                },
                "Code": {
                    "ZipFile": "exports.handler = async (event) => {\n  console.log(\"Received event:\", JSON.stringify(event, null, 2));\n  \n  // Logic for processing the S3 event\n  const record = event.Records[0];\n  const s3Bucket = record.s3.bucket.name;\n  const s3Key = record.s3.object.key;\n  console.log(`New object created in bucket: ${s3Bucket} with key: ${s3Key}`);\n\n  // Example logic: You can process the object in S3 here\n  // For example, fetching the S3 object or other actions\n\n  return {\n    statusCode: 200,\n    body: JSON.stringify({ message: 'Lambda executed successfully' }),\n  };\n};\n"
                }
            }
        },
        "LambdaS3EventSource": {
            "Type": "AWS::Lambda::EventSourceMapping",
            "Properties": {
                "BatchSize": 1,
                "EventSourceArn": {
                    "Fn::GetAtt": [
                        "S3Bucket",
                        "Arn"
                    ]
                },
                "FunctionName": {
                    "Ref": "LambdaFunction"
                },
                "Enabled": "True"
            }
        },
        "LambdaInvokePermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "Action": "lambda:InvokeFunction",
                "FunctionName": {
                    "Ref": "LambdaFunctionName"
                },
                "Principal": "s3.amazonaws.com",
                "SourceArn": {
                    "Fn::GetAtt": [
                        "S3Bucket",
                        "Arn"
                    ]
                },
                "SourceAccount": {
                    "Ref": "AWS::AccountId"
                }
            }
        }
    },
    "Outputs": {
        "LambdaFunctionName": {
            "Description": "The name of the Lambda function",
            "Value": {
                "Ref": "LambdaFunctionName"
            }
        },
        "LambdaExecutionRoleArn": {
            "Description": "The ARN of the IAM Role assumed by Lambda",
            "Value": {
                "Fn::GetAtt": [
                    "LambdaExecutionRole",
                    "Arn"
                ]
            }
        },
        "S3BucketName": {
            "Description": "The name of the S3 bucket",
            "Value": {
                "Ref": "S3Bucket"
            }
        }
    }
}