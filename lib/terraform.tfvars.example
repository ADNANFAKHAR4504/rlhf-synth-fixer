# terraform.tfvars.example
# Copy this file to terraform.tfvars and customize the values

# Region Configuration
aws_region = "us-west-2"
environment = "production"
environment_suffix = "prod-001"  # REQUIRED: Unique suffix for resource naming

# Project Configuration
project_name = "myapp"
migration_date = "2024-01-15"

# Tagging Configuration (for CI/CD integration)
repository = "myapp-infrastructure"
commit_author = "devops-team"
pr_number = "1234"
team = "synth"

# Network Configuration
vpc_cidr = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# EC2 Configuration
ami_id = "ami-0c02fb55956c7d316"  # Amazon Linux 2 in us-west-2
instance_type = "t3.medium"
key_pair_name = "myapp-keypair"

# Auto Scaling Configuration
asg_min_size = 2
asg_max_size = 6
asg_desired_capacity = 2

# Database Configuration
db_engine_version = "8.0.35"
db_instance_class = "db.t3.micro"
db_allocated_storage = 20
db_max_allocated_storage = 100
db_name = "myappdb"
db_username = "admin"
# db_password should be provided via environment variable:
# export TF_VAR_db_password="your-secure-password"

db_backup_retention_period = 7
db_backup_window = "03:00-04:00"
db_maintenance_window = "sun:04:00-sun:05:00"

# Resource Protection (set to false for testing, true for production)
enable_deletion_protection = false
skip_final_snapshot = true  # Set to false in production
