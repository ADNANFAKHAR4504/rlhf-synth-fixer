# Environment Configuration
environment_suffix = "prod-001"
region            = "us-east-1"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]

# ECS Configuration
container_image    = "your-account-id.dkr.ecr.us-east-1.amazonaws.com/financial-portal:latest"
container_port     = 80
desired_task_count = 3
min_task_count     = 3
max_task_count     = 10
cpu                = "256"
memory             = "512"

# Database Configuration
db_name     = "financialdb"
db_username = "dbadmin"
# db_password will be auto-generated if not provided

# Domain Configuration
domain_name = "financial-portal.example.com"

# Tags
cost_center = "FinancialServices"
environment = "production"
compliance  = "PCI-DSS"

# Geo-blocking (sanctioned countries)
geo_restriction_locations = ["KP", "IR", "SY", "CU"]
