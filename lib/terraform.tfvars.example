# Example terraform.tfvars file
# Copy this file to terraform.tfvars and update with your values

environment_suffix = "prod-v1"

# VPC and Network Configuration
primary_vpc_id     = "vpc-xxxxxxxxx"      # Replace with your VPC ID in us-east-1
primary_subnet_ids = [
  "subnet-xxxxxxxxx",
  "subnet-yyyyyyyyy",
  "subnet-zzzzzzzzz"
]

secondary_vpc_id     = "vpc-yyyyyyyyy"    # Replace with your VPC ID in us-west-2
secondary_subnet_ids = [
  "subnet-aaaaaaaaa",
  "subnet-bbbbbbbbb",
  "subnet-ccccccccc"
]

# Route 53 Configuration
hosted_zone_id      = "Z1234567890ABC"    # Replace with your Route 53 hosted zone ID
health_check_domain = "example.com"       # Replace with your domain

# Optional: Override default values
# database_name                 = "transactiondb"
# master_username               = "dbadmin"
# db_instance_class            = "db.r6g.large"
# backup_retention_period      = 30
# application_subnet_cidrs     = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
